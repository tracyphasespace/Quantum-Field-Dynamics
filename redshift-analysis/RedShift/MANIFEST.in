# Include additional files in the package distribution

# Documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Configuration files
include pyproject.toml
include requirements.txt
include requirements-dev.txt

# Example scripts
include run_demo.py
include fit_planck.py

# Data directory (if it contains sample data)
recursive-include data *.csv *.json *.txt

# Exclude development and build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .coverage
global-exclude .pytest_cache
prune build
prune dist
prune *.egg-info