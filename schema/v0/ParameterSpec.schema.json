{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ParameterSpec.schema.json",
  "type": "object",
  "properties": {
    "name": { "type": "string", "description": "Internal ID (e.g., nuclear.c1)" },
    "value": { "type": "number", "description": "Initial guess or fixed value" },
    "role": { "type": "string", "enum": ["coupling", "nuisance", "fixed", "derived"] },
    "bounds": {
      "type": "array",
      "items": { "type": ["number", "null"] },
      "minItems": 2,
      "maxItems": 2
    },
    "prior": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["uniform", "gaussian", "log_normal"] },
        "args": { "type": "object" }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "units": { "type": "string" },
    "frozen": { "type": "boolean", "default": false },
    "description": { "type": "string" }
  },
  "required": ["name", "value", "role"],
  "additionalProperties": false
}
