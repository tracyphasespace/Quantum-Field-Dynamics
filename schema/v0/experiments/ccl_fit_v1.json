{
  "schema_version": "v0.1",
  "experiment_id": "exp_2025_ccl_initial_fit",
  "description": "Fit the QFD geometric backbone (c1, c2) to stable isotopes. Target is Z (Charge).",

  "model": {
    "id": "qfd.nuclear.ccl",
    "variant": "backbone_only"
  },

  "parameters": [
    {
      "name": "nuclear.c1",
      "value": 1.0,
      "role": "coupling",
      "bounds": [0.5, 1.5],
      "units": "dimensionless",
      "prior": { "type": "gaussian", "args": { "mu": 1.0, "sigma": 0.3 } }
    },
    {
      "name": "nuclear.c2",
      "value": 0.05,
      "role": "coupling",
      "bounds": [0.0, 0.1],
      "units": "dimensionless"
    },
    {
      "name": "calibration.offset",
      "value": 0.0,
      "role": "nuisance",
      "frozen": true,
      "description": "Global charge offset if needed (fixed to 0 for physics runs)"
    }
  ],

  "datasets": [
    {
      "id": "nubase_2020_stable",
      "source": "data/raw/nubase_2020.csv",
      "columns": { "A": "A", "target": "Z" },
      "cuts": {
        "stable_only": true,
        "mass_min": 10
      }
    }
  ],

  "objective": {
    "type": "chi_squared",
    "weights": { "nubase_2020_stable": 1.0 }
  },

  "solver": {
    "method": "scipy.minimize",
    "options": {
      "algo": "L-BFGS-B",
      "maxiter": 1000,
      "tol": 1e-6
    }
  }
}
