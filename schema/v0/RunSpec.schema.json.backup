{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "RunSpec.schema.json",
  "type": "object",
  "properties": {
    "schema_version": { "type": "string", "pattern": "^v0\\.\\d+" },
    "experiment_id": { "type": "string" },
    "description": { "type": "string" },

    "model": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "enum": ["qfd.nuclear.ccl"] },
        "variant": { "type": "string", "default": "standard" }
      },
      "required": ["id"],
      "additionalProperties": false
    },

    "parameters": {
      "type": "array",
      "items": { "$ref": "ParameterSpec.schema.json" }
    },

    "datasets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "source": { "type": "string" },
          "columns": {
              "type": "object",
              "properties": {
                  "A": { "type": "string" },
                  "target": { "type": "string" },
                  "sigma": { "type": "string" },
                  "stable": { "type": "string" }
              },
              "additionalProperties": false
          },
          "cuts": { "type": "object", "additionalProperties": true }
        },
        "required": ["id", "source"],
        "additionalProperties": false
      }
    },

    "objective": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["chi_squared", "sse"] },
        "weights": { "type": "object", "additionalProperties": { "type": "number" } }
      },
      "additionalProperties": false
    },

    "solver": {
      "type": "object",
      "properties": {
        "method": { "type": "string", "enum": ["scipy.minimize"] },
        "options": { "type": "object" }
      },
      "additionalProperties": false
    }
  },
  "required": ["schema_version", "model", "parameters", "datasets", "solver"],
  "additionalProperties": false
}
