{
  "datasets": [
    {
      "columns": {
        "ell": "ell",
        "sigma": "sigma_TT",
        "target": "C_ell_TT_LCDM"
      },
      "cuts": {
        "ell": {
          "max": 2500,
          "min": 30
        }
      },
      "id": "planck_2018_tt",
      "source": "../../data/raw/planck_2018_power_spectra_mock.csv"
    }
  ],
  "description": "Test of the Boltzmann Transport Model: CMB peaks as scattering resonances of the vacuum lattice.",
  "experiment_id": "exp_2025_cmb_scattering_resonance",
  "model": {
    "id": "qfd.cosmo.transport",
    "variant": "scattering_resonance"
  },
  "objective": {
    "components": [
      {
        "active": true,
        "dataset_id": "planck_2018_tt",
        "observable_adapter": "qfd.adapters.cosmology.cmb_boltzmann_transport.predict_cmb_transport_spectrum",
        "weight": 1.0
      }
    ],
    "type": "chi_squared"
  },
  "parameters": [
    {
      "bounds": [
        100.0,
        300.0
      ],
      "description": "Radius of the vacuum soliton domain (Resonance Scale)",
      "name": "r_psi",
      "prior": {
        "args": {
          "max": 300.0,
          "min": 100.0
        },
        "type": "uniform"
      },
      "role": "coupling",
      "units": "Mpc",
      "value": 147.0
    },
    {
      "bounds": [
        1000.0,
        10000.0
      ],
      "description": "Base thermodynamic power amplitude",
      "name": "A_norm",
      "prior": {
        "args": {
          "max": 10000.0,
          "min": 1000.0
        },
        "type": "uniform"
      },
      "role": "nuisance",
      "units": "uK^2",
      "value": 5000.0
    },
    {
      "bounds": [
        0.0,
        2.0
      ],
      "description": "Frequency dependence of interaction",
      "name": "alpha",
      "prior": {
        "args": {
          "max": 2.0,
          "min": 0.0
        },
        "type": "uniform"
      },
      "role": "coupling",
      "units": "dimensionless",
      "value": 1.0
    },
    {
      "description": "Comoving distance to scattering shell (Mpc)",
      "frozen": true,
      "name": "chi_star",
      "role": "coupling",
      "units": "Mpc",
      "value": 14156.0
    }
  ],
  "schema_version": "v0.3",
  "solver": {
    "method": "scipy.minimize",
    "options": {
      "algo": "L-BFGS-B",
      "maxiter": 1000,
      "tol": 1e-06
    }
  }
}