{
  "datasets": [
    {
      "columns": {
        "ell": "ell",
        "sigma": "sigma_TT",
        "target": "C_ell_TT_LCDM"
      },
      "cuts": {
        "ell": {
          "max": 2500,
          "min": 30
        }
      },
      "id": "planck_2018_tt",
      "source": "../../data/raw/planck_2018_power_spectra_mock.csv"
    }
  ],
  "description": "Unified test of Boltzmann Transport with Hard Sphere Scattering Cross-Sections. Tests the hypothesis that geometry and thermodynamics are dual representations - scattering cross-section IS the form factor squared (Born approximation).",
  "experiment_id": "exp_2025_cmb_unified",
  "model": {
    "id": "qfd.cosmo.unified",
    "variant": "transport_soliton"
  },
  "objective": {
    "components": [
      {
        "active": true,
        "dataset_id": "planck_2018_tt",
        "observable_adapter": "qfd.adapters.cosmology.cmb_boltzmann_transport.predict_cmb_transport_spectrum",
        "weight": 1.0
      }
    ],
    "type": "chi_squared"
  },
  "parameters": [
    {
      "bounds": [
        50.0,
        500.0
      ],
      "description": "Scattering scale (Soliton Radius or Lattice Constant). Tests if ~274 Mpc (lattice spacing) or ~147 Mpc (domain radius) emerges.",
      "name": "r_psi",
      "prior": {
        "args": {
          "max": 500.0,
          "min": 50.0
        },
        "type": "uniform"
      },
      "role": "coupling",
      "units": "Mpc",
      "value": 274.0
    },
    {
      "bounds": [
        100.0,
        50000.0
      ],
      "description": "Thermodynamic amplitude",
      "name": "A_norm",
      "prior": {
        "args": {
          "max": 50000.0,
          "min": 100.0
        },
        "type": "uniform"
      },
      "role": "nuisance",
      "units": "uK^2",
      "value": 5000.0
    },
    {
      "bounds": [
        -2.0,
        2.0
      ],
      "description": "Spectral tilt (Blue Interaction strength). Tests if high-frequency photons scatter more (alpha > 0).",
      "name": "alpha",
      "prior": {
        "args": {
          "max": 2.0,
          "min": -2.0
        },
        "type": "uniform"
      },
      "role": "coupling",
      "units": "dimensionless",
      "value": 0.0
    },
    {
      "description": "Comoving distance to scattering shell (Mpc)",
      "frozen": true,
      "name": "chi_star",
      "role": "coupling",
      "units": "Mpc",
      "value": 14156.0
    }
  ],
  "schema_version": "v0.3",
  "solver": {
    "method": "scipy.minimize",
    "options": {
      "algo": "L-BFGS-B",
      "maxiter": 1000,
      "tol": 1e-06
    }
  }
}