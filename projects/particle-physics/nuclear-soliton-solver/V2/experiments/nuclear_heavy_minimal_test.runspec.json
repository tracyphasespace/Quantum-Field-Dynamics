    "options": {
      "maxiter": 1,
      "popsize": 8,
      "workers": 1,
      "seed": 42,
      "atol": 0.01,
      "tol": 0.01,
      "disp": true,
      "init": "latinhypercube",
      "strategy": "best1bin",
      "mutation": [0.5, 1.0],
      "recombination": 0.7
    },
    "scf_solver_options": {
      "grid_points": 48,
      "iters_outer": 360,
      "lr_psi": 0.01,
      "lr_B": 0.01,
      "early_stop_vir": 0.18,
      "device": "cuda",
      "backend": "torch"
