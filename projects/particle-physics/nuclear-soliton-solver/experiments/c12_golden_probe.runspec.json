{
  "schema_version": "v0.1",
  "experiment_id": "c12_golden_probe",
  "description": "GOLDEN PROBE: C-12 only. Find parameters that give correct energy AND zero virial simultaneously.",

  "model": {
    "id": "qfd.nuclear.binding.soliton",
    "variant": "phase9_scf"
  },

  "parameters": [
    {
      "name": "nuclear.c_v2_base",
      "value": 4.5,
      "bounds": [3.0, 6.0],
      "description": "SOLITON-TUNED: Higher stiffness for T+3V equilibrium"
    },
    {
      "name": "nuclear.c_v2_iso",
      "value": 0.027,
      "bounds": [0.01, 0.05]
    },
    {
      "name": "nuclear.c_v2_mass",
      "value": 0.0,
      "bounds": [-0.001, 0.001]
    },
    {
      "name": "nuclear.c_v4_base",
      "value": 12.0,
      "bounds": [5.0, 20.0],
      "description": "SOLITON-TUNED: Must resist 3x kinetic pressure"
    },
    {
      "name": "nuclear.c_v4_size",
      "value": -0.085,
      "bounds": [-0.15, -0.05]
    },
    {
      "name": "nuclear.alpha_e_scale",
      "value": 1.0,
      "bounds": [0.8, 1.2]
    },
    {
      "name": "nuclear.beta_e_scale",
      "value": 0.5,
      "bounds": [0.3, 0.7]
    },
    {
      "name": "nuclear.c_sym",
      "value": 25.0,
      "bounds": [20.0, 30.0]
    },
    {
      "name": "nuclear.kappa_rho",
      "value": 0.03,
      "bounds": [0.01, 0.05]
    }
  ],

  "datasets": [
    {
      "id": "c12_only",
      "source": "../data/ame2020_system_energies.csv",
      "cuts": {
        "target_isotopes": [
          {"Z": 6, "A": 12, "name": "C-12"}
        ]
      },
      "description": "Single target: C-12 magic nucleus"
    }
  ],

  "objective": {
    "type": "physics_based",
    "loss_function": "energy_error + 0.5 * virial_error",
    "description": "Pure physics: Energy match + Derrick virial convergence"
  },

  "solver": {
    "method": "scipy.differential_evolution",
    "options": {
      "maxiter": 20,
      "popsize": 10,
      "workers": 1,
      "seed": 42
    },
    "scf_solver_options": {
      "grid_points": 32,
      "iters_outer": 150,
      "early_stop_vir": 0.18,
      "device": "cuda"
    }
  }
}
